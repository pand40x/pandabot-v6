{
  "name": "pandabot-v6",
  "version": "1.0.0",
  "description": "Modüler Finans Asistanı Telegram Botu",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:all": "concurrently \"tsx watch src/index.ts\" \"tsx watch src/workers/alerts-worker.ts\"",
    "build": "tsc --skipLibCheck --noEmit false",
    "start": "node dist/index.js",
    "worker": "tsx src/workers/alerts-worker.ts",
    "reminder-worker": "tsx src/workers/reminders-worker.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "telegram",
    "bot",
    "fintech",
    "crypto",
    "nodejs",
    "typescript"
  ],
  "author": "panda0x",
  "license": "MIT",
  "dependencies": {
    "agenda": "^5.0.0",
    "axios": "^1.7.7",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "grammy": "^1.21.1",
    "mongoose": "^8.6.1",
    "winston": "^3.14.2",
    "yahoo-finance2": "^3.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.12.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
